depends meson
depends gtk+-3
depends gnome-desktop

optional_depends gobject-introspection \
                 "-Dintrospection=enabled" \
                 "-Dintrospection=disabled" \
                 "introspection support" \
                 y

optional_depends vala \
                 "-Dvapi=true" \
                 "-Dvapi=false" \
                 "vala support" \
                 n

optional_depends gtk-doc \
                 "-Dgtk_doc=true" \
                 "-Dgtk_doc=false" \
                 "generate documentation" \
                 n
