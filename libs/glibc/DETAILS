   SOURCE_URL[0]=$GNU_URL/$MODULE/$SOURCE
   SOURCE_URL[1]=ftp://ftp.gnu.org/pub/gnu/$MODULE/$SOURCE
  SOURCE2_URL[0]=$GNU_URL/$MODULE/$SOURCE2
  SOURCE2_URL[1]=ftp://ftp.gnu.org/pub/gnu/$MODULE/$SOURCE2
