echo "CALENDAR=n" >> $MODULE_CONFIG

if ! grep -q "XFT" $MODULE_CONFIG; then
 if query "Enable Xft exetntions?" n
   then echo "XFT=y" >> $MODULE_CONFIG
   else echo "XFT=n" >> $MODULE_CONFIG
 fi
fi

