depends wayland-protocols
depends meson

optional_depends systemd "-D logind-provider=systemd" "" "for systemd logind support"
optional_depends elogind "-D logind-provider=elogind" "" "for elogind support"

optional_depends bash-completion \
                 "-D bash-completions=true" \
                 "-D bash-completions=false" \
                 "for bash completions install"

optional_depends zsh \
                 "-D zsh-completions=true" \
                 "-D zsh-completions=false" \
                 "for zsh completions install"
