          MODULE=lunar-tools
         VERSION=2004.2
          SOURCE=$MODULE-$VERSION.tar.bz2
      SOURCE_URL=http://lunar-linux.org/lunar/
      SOURCE_VFY=sha1:54cd6a761f730203e699dbcf27fce57d9c1ebb3c
