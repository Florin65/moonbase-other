          MODULE=sysstat
         VERSION=4.0.7
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=ftp://ibiblio.org/pub/Linux/system/status/$SOURCE
   SOURCE_URL[1]=ftp://ftp.freesoftware.com/pub/linux/sunsite/system/status/$SOURCE
   SOURCE_URL[2]=http://perso.wanadoo.fr/sebastien.godard/$SOURCE
        WEB_SITE=http://perso.wanadoo.fr/sebastien.godard/
         ENTERED=20020812
         UPDATED=20020812
           SHORT="System performance monitoring tools"
cat <<EOF
The sysstat module comes with a set of system-monitoring tools:
sadc, sar, iostat, sa1, sa2, mpstat. It is usefull to monitor
high load machines and discovering hardware bottlenecks or
other problems
EOF
