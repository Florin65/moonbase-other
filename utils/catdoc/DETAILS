          MODULE=catdoc
         VERSION=0.90.3
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=ftp://ftp.ice.ru/pub/vitus/$SOURCE
        WEB_SITE=http://www.ice.ru/~vitus/catdoc/
         ENTERED=20020504
         UPDATED=20020504
           SHORT="catdoc outputs .doc files as text."
      MAINTAINER="JacksonJE@health.missouri.edu"

cat << EOF
catdoc is program which reads one or more Microsoft word files and outputs 
text, contained insinde them to standard output. Therefore it does same work 
for .doc files, as unix cat command for plain ASCII files.
EOF
