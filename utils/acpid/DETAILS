          MODULE=acpid
         VERSION=2.0.27
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$SFORGE_URL/${MODULE}2
      SOURCE_VFY=sha256:820c223e53cc11d9d7229fb1ffc2c2205f1054082c80f83f5a4ec4df16d3a616
        WEB_SITE=http://sourceforge.net/projects/acpid2/
