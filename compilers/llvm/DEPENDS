optional_depends libffi "-DLLVM_ENABLE_FFI=ON -DFFI_INCLUDE_DIR=$(pkg-config --variable=includedir libffi)" \
                        "-DLLVM_ENABLE_FFI=OFF" \
                        "for high level programming support"

