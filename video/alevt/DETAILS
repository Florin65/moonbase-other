          MODULE=alevt
         VERSION=1.6.0
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://www.goron.de/~froese/$MODULE/$SOURCE
        WEB_SITE=http://www.goron.de/~froese
         ENTERED=20020627
