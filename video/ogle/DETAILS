           MODULE=ogle
         VERSION=0.9.1
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://www.dtek.chalmers.se/groups/dvd/dist/$SOURCE
        WEB_SITE=http://www.dtek.chalmers.se/~dvd/
