      SOURCE_URL=$SFORGE_URL/$MODULE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE\_$VERSION
      SOURCE_VFY=sha256:176c2482a0656f81e307f1505e6dfcdab086ee73e7de363617b884c5d7205aed
