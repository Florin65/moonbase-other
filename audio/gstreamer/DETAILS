SOURCE_DIRECTORY=$BUILD_DIRECTORY/${MODULE%-*}-$VERSION
      SOURCE_VFY=sha256:0339e0f156e130233ae26f0dcf541bf42ed73dcf6e2713369ed61d215b0847fc
