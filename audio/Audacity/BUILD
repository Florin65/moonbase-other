autoreconf -vi &&

OPTS+=" --with-lib-preference=system \
        --with-libsndfile=system \
        --with-expat=system \
        --enable-unicode \
        --with-libresample=no \
        --with-libsamplerate=no \
        --with-libsoxr=system \
        --with-portaudio=local \
        --with-widgetextra=local \
        --with-portmixer"

export WX_CONFIG=/usr/bin/wx-config-2.8

default_build
