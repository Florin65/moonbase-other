optional_depends portaudio  "--enable-portaudio"  "--disable-portaudio"  "for portaudio support"
optional_depends speex      "--enable-speex"      "--disable-speex"      "for speech support"
optional_depends SDL        "--enable-sdl"        "--disable-sdl --enable-xv" "for SDL sound support(n=using X11)"
optional_depends alsa-oss   "--enable-oss"        "--disable-oss"        "for Alsa oss support"
optional_depends ffmpeg     "--enable-ffmpeg"     "--disable-ffmpeg"     "for ffmpeg support"
optional_depends pulseaudio "--enable-pulseaudio" "--disable-pulseaudio" "for pulseaudio support"
optional_depends libupnp    "--enable-upnp"       "--disable-upnp"       "for upnp support"
