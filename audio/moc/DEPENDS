optional_depends "libvorbis"  ""  "--without-ogg"      "for ogg support"   &&
optional_depends "flac"       ""  "--without-flac"     "for flac support"  &&
optional_depends "libsndfile" ""  "--without-sndfile"  "for other audio formats support"
