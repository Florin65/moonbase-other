depends gst-plugins-base

optional_depends a52dec        "-Da52dec=enabled"   "" "for AC-3 support"
optional_depends libdvdread    "-Ddvdread=enabled"  "" "for DVD support"
optional_depends libcdio       "-Dcdio=enabled"     "" "for CD control support"
optional_depends mpeg2dec      "-Dmpeg2dec=enabled" "" "for MPEG-2 video support"
optional_depends x264-snapshot "-Dx264=enabled"     "" "for H264 video support"
optional_depends orc           "-Dorc=enabled"      "" "for runtime compiler support"
optional_depends amrnb         "-Damrnb=enabled"    "" "for AMR narrowband support"
optional_depends amrwb         "-Damrwb=enabled"    "" "for AMR wideband support"
