depends   gdk-pixbuf  &&

optional_depends  "gtk+-2"               \
                  "--enable-gtk2"        \
		  ""                     \
		  "to enable Gtk+2 support" &&

optional_depends  "audiofile"            \
                  "--enable-audiofile"   \
                  "--disable-audiofile"  \
                  "to play aiff, snd, wave, and au files"  &&

optional_depends  "esound"             \
                  "--enable-esd"       \
                  "--disable-esdtest"  \
                  "to enable enlightenment sound daemon for output"
