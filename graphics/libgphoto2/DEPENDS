depends libusb-compat

optional_depends "%JPEG"    "--with-jpeg"            "--without-jpeg"       "For jpeg graphics support"
optional_depends "gd"       "--with-gdlib=auto"      "--without-gdlib"      "For graphics support provided by gd"
optional_depends "libexif"  "--with-libexif=auto"    "--without-libexif"    "For EXIF tag support"
optional_depends "libxml2"  "--with-libxml-2.0=auto" "--without-libxml-2.0" "For xml support"
