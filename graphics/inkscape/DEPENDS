depends gsl
depends gtkmm
depends libart_lgpl
depends libxml2
depends gc
depends popt
depends boost

optional_depends lcms \
                 "-DENABLE_LCMS=ON" \
                 "-DENABLE_LCMS=OFF" \
                 "enable LittleCms for color management"

optional_depends poppler \
                 "-DENABLE_POPPLER_CAIRO=ON" \
                 "-DENABLE_POPPLER_CAIRO=OFF" \
                 "for poppler support"

optional_depends ImageMagick \
                 "-DWITH_IMAGE_MAGICK=ON" \
                 "-DWITH_IMAGE_MAGICK=OFF" \
                 "support for raster extensions and import resolution"

optional_depends "libwpg" \
                 "-DWITH_LIBWPG=ON" \
                 "-DWITH_LIBWPG=OFF" \
                 "for Wordperfect graphics support"
