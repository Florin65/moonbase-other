          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://www.libsdl.org/release/$SOURCE
        WEB_SITE=http://www.libsdl.org
         ENTERED=20010922
