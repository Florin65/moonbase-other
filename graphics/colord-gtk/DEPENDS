depends gtk+-3
depends colord

optional_depends vala \
                 "-Dvapi=true" \
                 "-Dvapi=false" \
                 "Build vala bindings"

optional_depends gtk+-2 \
                 "-Dgtk2=true" \
                 "-Dgtk2=false" \
                 "include GTK+-2 support" \
                 "n"

optional_depends gtk-doc \
                 "-Ddocs=true" \
                 "-Ddocs=false" \
                 "Generate documentation" \
                 "n"
