          MODULE=linux-2.6-grsec
  KERNEL_VERSION=2.6.7
   GRSEC_VERSION=2.0.1
         VERSION=${KERNEL_VERSION}-${GRSEC_VERSION}	  
          SOURCE=linux-${KERNEL_VERSION}.tar.bz2
         SOURCE2=grsecurity-${GRSEC_VERSION}-${KERNEL_VERSION}.patch
