     SOURCE2_URL=http://www.grsecurity.org/
      SOURCE_VFY=sha1:a030a9c6dcd10c5d90a86f915ad4710084cbca71
     SOURCE2_VFY=sha1:caa94787653362783849a4424d3e24430acf29ab
