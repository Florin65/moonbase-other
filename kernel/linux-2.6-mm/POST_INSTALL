# Done to shorten the boot label for lilo
LABEL=`echo ${VERSION} | sed 's/-//g'`

if [ "$USE_LILO" == "y" ]; then
    update_lilo ${VERSION}  ${LABEL}
elif [ "$USE_GRUB" == "y" ]; then
    update_grub ${VERSION}  ${LABEL}
fi

#  Reinstall packages that add their own kernel modules
lin -c kernel-reqs

