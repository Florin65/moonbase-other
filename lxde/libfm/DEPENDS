depends intltool
depends gtk+-2
depends menu-cache

optional_depends gtk+-3 "--with-gtk=3" "" "for GTK+ 3.x support"

optional_depends libexif "--enable-exif"    "--disable-exif"    "for faster thumbnail loading"
optional_depends udisks  "--enable-udisks"  "--disable-udisks"  "for udisks support"
optional_depends vala    "--enable-actions" "--disable-actions" "for custom actions in menu context"

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "for building documentation"
