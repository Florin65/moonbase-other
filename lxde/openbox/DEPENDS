                 "--enable-xcursor" \
                 "--disable-xcursor" \
                 "for X11 cursor support"

optional_depends imlib2 \
                 "--enable-imlib2" \
                 "--disable-imlib2" \
                 "for imlib2 support"

optional_depends librsvg \
                 "--enable-librsvg" \
                 "--disable-librsvg" \
                 "for SVG images support"

optional_depends startup-notification \
                 "--enable-startup-notification"  \
                 "--disable-startup-notification" \
                 "for startup-notification support"

