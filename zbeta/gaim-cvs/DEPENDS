depends   gtk+-2      &&

optional_depends  "audiofile"            \
                  "--enable-audiofile"   \
                  "--disable-audiofile"  \
                  "to play aiff, snd, wave, and au files"  &&

optional_depends  "esound"             \
                  "--enable-esd"       \
                  "--disable-esdtest"  \
                  "to enable enlightenment sound daemon for output"

optional_depends  "gtkspell"            \
                  "--enable-gtkspell"   \
                  "--disable-gtkspell"  \
                  "to enable spell checking"

