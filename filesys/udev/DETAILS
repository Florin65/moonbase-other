          SOURCE=$MODULE-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
      SOURCE_URL=http://www.kernel.org/pub/linux/utils/kernel/hotplug/$SOURCE
     SOURCE2=devnode_to_devname.patch
