SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=http://mtools.linux.lu/$SOURCE
   SOURCE_URL[1]=http://www.tux.org/pub/knaff/mtools/$SOURCE
#  SOURCE2_URL[0]=http://mtools.linux.lu/$SOURCE2
