         SOURCE2=$MODULE-$VERSION-po.patch.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=ftp://ftp.gnupg.org/gcrypt/$MODULE/$SOURCE
   SOURCE_URL[1]=http://gulus.usherb.ca/pub/appl/GnuPG/$MODULE/$SOURCE
     SOURCE2_URL=$PATCH_URL/$SOURCE2
      SOURCE_VFY=md5:e4991e46fde52b216410ef0f485b4217
     SOURCE2_VFY=md5:42fad31da5da5e11176aee81eb0e5f77
