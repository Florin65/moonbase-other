                 "-D libffi=enabled" \
                 "-D libffi=disabled" \
                 "for libffi support" \
                 "n"

optional_depends bash-completion \
                 "-D bash_completion=enabled" \
                 "-D bash_completion=disabled" \
                 "for bash completion support" \

optional_depends systemd \
                 "-D systemd=enabled" \
                 "-D systemd=disabled" \
                 "for systemd support"
