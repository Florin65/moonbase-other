depends inetutils

optional_depends "libevent" "--with-libevent=external" \
                            "--with-libevent=internal" \
                            "for libevent library support"

optional_depends "hwloc"\
                 "--with-hwloc=external" \
                 "--with-hwloc=internal" \
                 "for hwloc library support"

optional_depends "libtool"  "--with-libltdl"  "" "for the system provided libltdl library"
optional_depends "libnl3"   "--with-libnl3"   "" "for libnl3 library support"
optional_depends "sqlite"   "--with-sqlite3"  "" "for sqlite support"
optional_depends "valgrind" "--with-valgrind" "" "for valgrind support"
