          MODULE=netpanzer
         VERSION=0.8.7
          SOURCE=$MODULE-$VERSION-source.zip
	 SOURCE2=$MODULE-music.zip
      SOURCE_URL=http://www.netpanzer.info/Download/NetPanzer/Releases/$VERSION/
     SOURCE2_URL=$SFORGE_URL/${MODULE}.berlios/
     SOURCE2_VFY=sha256:
        WEB_SITE=http://netpanzer.berlios.de/
