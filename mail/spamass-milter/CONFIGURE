if ! module_installed spamass-milter; then
  echo -e "\n\e[36m################################################################\e[0;33;1m"
  echo -e ""
  echo -e " Please note, you \e[0;1;4mMUST\e[0;33;1m enable libmilter in Sendmail before"
  echo -e " installing spamass-milter."
  echo -e ""
  echo -e " If you have not already done this, please \e[0;1mlin -c -r sendmail\e[0m"
  echo -e ""
  echo -e "\e[36m################################################################\e[0m\n"
  sleep 6
fi
