#!/bin/sh
#
# This script will prepare your home directory for a custom waimea
# configuration.

mkdir -p ~/.waimea
mkdir -p ~/.waimea/actions
mkdir -p ~/.waimea/styles

cp /usr/share/Waimea/menu ~/.waimea/menu
cp /usr/share/Waimea/actions/* ~/.waimea/actions/
cp /usr/share/Waimea/styles/*  ~/.waimea/styles/

cp /usr/share/Waimea/waimearc.example ~/.waimearc

