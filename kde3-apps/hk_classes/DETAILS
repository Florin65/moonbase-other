SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=$SFORGE_URL/hk-classes/$SOURCE
     SOURCE_VFY=md5:35c16e935947b0b41b31b8ce5f10d0f1
        WEB_SITE=http://hk-classes.sourceforge.net/
         ENTERED=20040712
