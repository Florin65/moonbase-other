  OPTS+=" --enable-udev_sysfs_rules"
fi &&

OPTS+=" --enable-cups-drv-install      \
        --enable-new-hpcups            \
        --enable-cups-ppd-install      \
        --disable-foomatic-ppd-install \
        --disable-hpijs-install        \
        --disable-foomatic-drv-install"
