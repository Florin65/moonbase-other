          MODULE=gtkspell3
         VERSION=3.0.6
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/gtkspell/
      SOURCE_VFY=sha256:01372e5b1648d6c752bad390eda048f52ea44ca3d32a78f5a589cbfe5f6b0ac3
