   SOURCE_URL_FULL=https://github.com/containers/libpod/archive/v$VERSION.tar.gz
        SOURCE_VFY=sha256:ec7524a55f607dea2a8c6990082dc3bde1a6e5b1e8250836fde19974ccc9857c
