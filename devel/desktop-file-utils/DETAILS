          MODULE=desktop-file-utils
         VERSION=0.10
          SOURCE=$MODULE-$VERSION.tar.gz
      SOURCE_URL=http://www.freedesktop.org/software/$MODULE/releases/
      SOURCE_VFY=sha1:e534223872b928ce4b58518d56a8bd883bb60a82
        WEB_SITE=http://www.freedesktop.org/wiki/Software_2fdesktop_2dfile_2dutils
         ENTERED=20050115
