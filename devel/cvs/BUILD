(
  ./configure  --build=$BUILD            \
               --prefix=/usr             \
               --sysconfdir=/etc         \
               --localstatedir=/var      \
               --infodir=/usr/share/info \
               --mandir=/usr/share/man   \
               --with-gssapi=no          \
               $OPTS
) > $C_FIFO 2>&1


    
